<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".module_outlet.OutletDetailsActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        android:layout_marginBottom="24dp"
        android:gravity="center"
        android:orientation="horizontal">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/ivOutletImage"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_marginStart="16dp"
            android:background="@drawable/ring_outlet_online"
            android:padding="4dp"
            android:layout_gravity="top"
            android:scaleType="centerCrop"
            android:src="@drawable/store_icon" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvOutletName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="99 Rotiwala"
                android:maxLines="1"
                android:fontFamily="@font/google_sans_medium"
                android:textSize="18sp"
                android:textColor="@color/color_text_title"/>

            <TextView
                android:id="@+id/tvOutletArea"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="LIG Square"
                android:fontFamily="@font/google_sans_regular"
                android:textSize="14sp"
                android:textColor="@color/color_text_description"/>


        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@drawable/line_dashed"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="16dp"
            android:text="Upload Swiggy Menu"
            android:fontFamily="@font/google_sans_medium"
            android:textSize="16sp"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnUploadMenu"
            android:layout_width="wrap_content"
            android:layout_height="46dp"
            android:text="Upload"
            android:textSize="16sp"
            app:cornerRadius="0dp"
            android:backgroundTint="@color/color_primary"
            android:fontFamily="@font/redhat_medium"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@drawable/line_dashed"/>

</LinearLayout>