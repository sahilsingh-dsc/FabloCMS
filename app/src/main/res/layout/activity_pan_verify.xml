<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".module_digikyc.pan.PanVerifyActivity">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="0dp"
        app:cardElevation="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingStart="4dp"
            android:paddingTop="8dp"
            android:paddingEnd="4dp"
            android:paddingBottom="8dp">

            <ImageView
                android:id="@+id/ivGoBack"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_fablo_go_back"
                android:clickable="true"
                android:background="?selectableItemBackgroundBorderless"
                android:padding="6dp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:fontFamily="@font/google_sans_medium"
                android:gravity="center"
                android:text="PAN Verification"
                android:textColor="@color/color_text_title"
                android:textSize="20sp" />

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp" />


        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="0dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="PAN Number"
                        android:textColor="@color/color_text_title"
                        android:textSize="18sp"
                        android:fontFamily="@font/google_sans_medium"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="10 characters Seller's PAN Card number"
                        android:textColor="@color/color_text_description"
                        android:textSize="14sp"
                        android:fontFamily="@font/google_sans_regular"/>


                    <LinearLayout
                        android:id="@+id/lvPanResponse"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:visibility="visible"
                        android:layout_marginTop="16dp"
                        android:orientation="vertical">

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="2dp"
                            android:layout_marginBottom="16dp"
                            android:background="@drawable/line_dashed"/>


                        <ImageView
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:src="@drawable/ic_fab_kyc_state_complete"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:fontFamily="@font/google_sans_bold"
                            android:textColor="@color/color_text_title"
                            android:textSize="18sp"
                            android:text="Verification Successful"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="24dp"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Name"
                                android:textColor="@color/color_text_description"
                                android:textSize="16sp"
                                android:fontFamily="@font/google_sans_regular"/>

                            <TextView
                                android:id="@+id/tvNameOnPan"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:text="..."
                                android:textColor="@color/color_text_title"
                                android:textSize="18sp"
                                android:fontFamily="@font/google_sans_medium"/>

                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="2dp"
                            android:layout_marginTop="12dp"
                            android:layout_marginBottom="12dp"
                            android:background="@drawable/line_dashed"/>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Category"
                                android:textColor="@color/color_text_description"
                                android:textSize="16sp"
                                android:fontFamily="@font/google_sans_regular"/>

                            <TextView
                                android:id="@+id/tvTypeOfPan"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:text="..."
                                android:textColor="@color/color_text_title"
                                android:textSize="18sp"
                                android:fontFamily="@font/google_sans_medium"/>

                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="2dp"
                            android:layout_marginTop="12dp"
                            android:layout_marginBottom="12dp"
                            android:background="@drawable/line_dashed"/>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Aadhaar Link Status"
                                android:textColor="@color/color_text_description"
                                android:textSize="16sp"
                                android:fontFamily="@font/google_sans_regular"/>

                            <TextView
                                android:id="@+id/tvAadhaarPanLink"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:text="..."
                                android:textColor="@color/color_text_title"
                                android:textSize="18sp"
                                android:fontFamily="@font/google_sans_medium"/>

                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="2dp"
                            android:layout_marginTop="12dp"
                            android:layout_marginBottom="12dp"
                            android:background="@drawable/line_dashed"/>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Status"
                                android:textColor="@color/color_text_description"
                                android:textSize="16sp"
                                android:fontFamily="@font/google_sans_regular"/>

                            <TextView
                                android:id="@+id/tvStatusOfPan"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:text="..."
                                android:textColor="@color/color_text_title"
                                android:textSize="18sp"
                                android:fontFamily="@font/google_sans_medium"/>

                        </LinearLayout>

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnUpdatePan"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:fontFamily="@font/google_sans_bold"
                            android:insetLeft="0dp"
                            android:insetTop="0dp"
                            android:insetRight="0dp"
                            android:insetBottom="0dp"
                            android:visibility="visible"
                            android:layout_marginTop="24dp"
                            android:text="Update DigiKYC PAN"
                            android:textAllCaps="false"
                            android:textSize="16sp"
                            app:cornerRadius="0dp" />

                    </LinearLayout>

                </LinearLayout>


            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>

    </ScrollView>

</LinearLayout>